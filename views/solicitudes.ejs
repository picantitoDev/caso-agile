<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Solicitudes de Acreditación</title>
    <link rel="stylesheet" href="/solicitudes.css" />
  </head>
  <body>
    <header>
      <a class="back-btn" href="/admin/home">← Atrás</a>
      <h1>Solicitudes de Acreditación en Progreso</h1>
      <div></div>
    </header>

    <main>
      <% if (solicitudes.length === 0) { %>
      <p class="sin-solicitudes">No hay solicitudes registradas.</p>
      <% } else { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Universidad</th>
            <th>Representante</th>
            <th>Carrera</th>
            <th>Fecha de Creación</th>
            <th>Acción</th>
          </tr>
        </thead>
        <tbody>
          <% solicitudes.forEach((solicitud, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= solicitud.universidad %></td>
            <td><%= solicitud.username %></td>
            <td><%= solicitud.nombre_carrera %></td>
            <td>
              <%= solicitud.fecha_creacion ? new
              Date(solicitud.fecha_creacion).toLocaleDateString() : "Sin fecha"
              %>
            </td>
            <td>
              <a
                class="btn-gestionar"
                href="/admin/solicitudes/<%= solicitud.id_solicitud %>"
                >Gestionar</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </main>
  </body>
</html>
